<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    android:padding="5dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/nightBackground"
    app:strokeWidth="1dp"
    app:strokeColor="@color/dark_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cityRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cityText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Surat, Gujarat, India"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/cityRow"
            app:layout_constraintStart_toStartOf="@id/cityRow"
            app:layout_constraintTop_toTopOf="@id/cityRow" />

        <TextView
            android:id="@+id/defaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat_light_italic"
            android:gravity="center"
            android:text="@string/defaultCity"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/cityRow"
            app:layout_constraintEnd_toStartOf="@id/tickImage"
            app:layout_constraintTop_toTopOf="@id/cityRow" />

        <ImageView
            android:id="@+id/tickImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/checkmark"
            android:src="@drawable/baseline_check_24"
            app:layout_constraintBottom_toBottomOf="@id/cityRow"
            app:layout_constraintEnd_toEndOf="@id/cityRow"
            app:layout_constraintTop_toTopOf="@id/cityRow"
            app:tint="@color/green" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>